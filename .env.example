# Bot-Creator-Papa Environment Configuration
# Copy this file to .env and fill in your values

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
USE_WEBHOOK=false
WEBHOOK_URL=https://araska.id/bot-creator-papa/webhook

# MySQL Database Configuration
DB_HOST=localhost
DB_USER=bot_creator_user
DB_PASSWORD=your_secure_database_password
DB_NAME=bot_creator_papa
DB_PORT=3306

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
SESSION_SECRET=your_session_secret_here

# Tech Support Configuration
TECH_SUPPORT_USERNAME=titokt78
TECH_SUPPORT_USER_ID=7761064473
TECH_SUPPORT_DISPLAY_NAME=papabadak

# Bot Configuration
DEBUG_MODE=true
MAX_UPLOAD_SIZE=50MB
MEDIA_TIMEOUT=300000
ADMIN_VERIFY_TIMEOUT=60000

# OY Indonesia API Configuration
# Set to 'production' for live environment, 'sandbox' for testing
OY_ENVIRONMENT=sandbox
OY_API_BASE_URL_PRODUCTION=https://partner.oyindonesia.com
OY_API_BASE_URL_SANDBOX=https://api-stg.oyindonesia.com
OY_VALIDATION_ENDPOINT=/api/validate-credentials
OY_QRIS_ENDPOINT=/api/generate-qris

# Static URLs
DONATION_URL=https://your-donation-page.com

# Admin IDs (comma-separated list of Telegram user IDs)
ADMIN_IDS=123456789,987654321